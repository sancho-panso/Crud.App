@model IEnumerable<Crud.App.Domains.Discount>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountMultiplier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricelictCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.BussinessID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientGroup.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemGroup.ItemsGroupCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountMultiplier)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricelictCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DiscountID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DiscountID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DiscountID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
